# Environment Configuration for AuraHealth
# Copy this to .env and fill in your actual values

# ===== APPLICATION MODE =====
# Set to "false" to use real APIs, "true" for mock data
MOCK_MODE=true

# ===== API KEYS =====
# Google Gemini API (Get from: https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Google Maps API (Get from: https://console.cloud.google.com/apis/credentials)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twilio API (Get from: https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===== ENCRYPTION =====
# 32-byte master key for AES-256 (Generate random string)
# IMPORTANT: Generate a strong random key for production!
MASTER_ENCRYPTION_KEY=change_this_to_a_random_32_char_key

# ===== DATABASE CONFIGURATION =====
# Shard 0
DB_SHARD0_HOST=localhost
DB_SHARD0_PORT=5432
DB_SHARD0_DATABASE=aurahealth_shard0
DB_SHARD0_USER=postgres
DB_SHARD0_PASSWORD=your_db_password_here

# Shard 1
DB_SHARD1_HOST=localhost
DB_SHARD1_PORT=5433
DB_SHARD1_DATABASE=aurahealth_shard1
DB_SHARD1_USER=postgres
DB_SHARD1_PASSWORD=your_db_password_here

# ===== FLASK CONFIGURATION =====
FLASK_ENV=development
FLASK_DEBUG=false
